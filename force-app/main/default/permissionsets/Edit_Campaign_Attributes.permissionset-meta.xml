<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>This permission set allows the desired users to edit  Marketing Segment, Marketing Campaign and Program Type attributes on a campaign, irrespective of who created the campaign</description>
    <fieldPermissions>
        <editable>true</editable>
        <field>Campaign.Marketing_Campaign__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Campaign.Marketing_Segment__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>Campaign.Program_Type__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <hasActivationRequired>false</hasActivationRequired>
    <label>Edit Campaign Attributes</label>
    <license>Salesforce</license>
</PermissionSet>
