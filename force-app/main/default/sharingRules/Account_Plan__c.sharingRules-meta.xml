<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingCriteriaRules>
        <fullName>ShareAMRAccountPlansWithAMRCS</fullName>
        <accessLevel>Read</accessLevel>
        <description>Shares Account Plan of AMR region to AMR Customer Support</description>
        <label>ShareAMRAccountPlansWithAMRCS</label>
        <sharedTo>
            <role>AMR_Customer_Support</role>
        </sharedTo>
        <criteriaItems>
            <field>Account_Region__c</field>
            <operation>equals</operation>
            <value>AMR</value>
        </criteriaItems>
    </sharingCriteriaRules>
