<apex:page docType="html-5.0" showHeader="false" standardStylesheets="false" cache="true" controller="Charket.SalesforceOAuthCallbackController" action="{!getAccessToken}">
<html>
    <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0"/>
        <title>Connect with your Salesforce User | Charket</title>
        <link href="https://asset.charket.com.cn/styles/vendor/weui.min.css" rel="stylesheet"/>
    </head>
    <body>
        <div>
            <apex:messages />
        </div>
        <apex:outputPanel rendered="{!IsSuccess}">
            <div class="page msg_success js_show">
                <div class="weui-msg">
                    <div class="weui-msg__icon-area">
                        <i class="weui-icon-success weui-icon_msg"></i>
                    </div>
                    <div class="weui-msg__text-area">
                        <h2 class="weui-msg__title">登陆成功</h2>
                        <p class="weui-msg__desc">请返回公众号继续操作！</p>
                    </div>
                </div>
            </div>
        </apex:outputPanel>
    </body>
</html>
</apex:page>