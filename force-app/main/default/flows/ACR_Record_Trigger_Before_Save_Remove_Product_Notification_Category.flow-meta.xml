    <decisions>
        <description>If it&apos;s containing Regulatory/Quality and removed and Isactive is True and changed to false , will check by this decision</description>
        <name>Is_Role_Is_Active_Field_Changed</name>
        <label>Is Role/Is_Active Field Changed?</label>
        <locationX>314</locationX>
        <locationY>311</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Role_Contains_R_Q_and_Changed</name>
            <conditionLogic>(1  AND 3 AND NOT (2))</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.Roles</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Regulatory/Quality</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Roles</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Regulatory/Quality</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Setup.cs_Apex_Settings__c.Bypass_All_Flows__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Product_Notification_Category_0</targetReference>
            </connector>
            <label>Role Contains R/Q and Changed</label>
        </rules>
        <rules>
            <name>IsActive_Changed_From_True_to_False</name>
            <conditionLogic>1 AND 2 AND 3 AND 4</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.IsActive</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.IsActive</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Roles</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Regulatory/Quality</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Setup.cs_Apex_Settings__c.Bypass_All_Flows__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Roles_Value</targetReference>
            </connector>
            <label>IsActive Changed From True to False</label>
        </rules>
    </decisions>
    <description>If Regulatory/Quality from Role field is removed, then the Product Notifications Category field for the same ACR record will be cleared automatically</description>
    <formulas>
        <description>Returns the Roles Field Value by Removing the R/q value from the field</description>
        <name>Roles_Update_Formula</name>
        <dataType>String</dataType>
        <expression>SUBSTITUTE({!varMSP_Roles},&quot;Regulatory/Quality&quot;,&quot;&quot;)</expression>
    </formulas>
