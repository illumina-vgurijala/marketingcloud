<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CheckCaseStatusForBusinessIssueCase</fullName>
    <active>false</active>
    <errorConditionFormula>AND(RecordType.Name == $Label.CaseRecordTypeBusinessIssue,
TEXT(Status) = $Label.CaseStatusClosedDuplicate)</errorConditionFormula>
    <errorDisplayField>Status</errorDisplayField>
    <errorMessage>You cannot change Case Status to Closed-Duplicate for Business Issue</errorMessage>
</ValidationRule>
