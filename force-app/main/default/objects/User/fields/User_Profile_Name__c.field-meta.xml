<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
		<fullName>User_Profile_Name__c</fullName>
		<businessStatus>Active</businessStatus>
        <securityClassification>Internal</securityClassification>
        <description>Profile Name of the User. In Lightning,Profile name value for System Administrator profile is PT1. Hence PT1 check is added in formula</description>
        <externalId>false</externalId>
        <formula>IF(CONTAINS(Profile.Name,&apos;PT1&apos;),&apos;System Administrator&apos;,Profile.Name)</formula>
        <label>User Profile Name</label>
        <required>false</required>
        <type>Text</type>
        <unique>false</unique>
</CustomField>
