<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CheckNameLength</fullName>
    <active>true</active>
    <description>Validates the Account name length.</description>
    <errorConditionFormula>LEN ( Name ) &gt; 140</errorConditionFormula>
    <errorDisplayField>Name</errorDisplayField>
    <errorMessage>Please adjust the Account Name and reduce the length to 140 characters.</errorMessage>
</ValidationRule>
