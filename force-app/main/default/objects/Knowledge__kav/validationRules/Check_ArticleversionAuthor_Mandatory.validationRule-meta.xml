<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_ArticleversionAuthor_Mandatory</fullName>
    <active>true</active>
    <description>Article Version Author is mandatory when Knowledge source is DCP.</description>
    <errorConditionFormula>AND( ISPICKVAL(Knowledge_Source__c , &apos;DCP&apos; ) , ISBLANK( Article_Version_Author__c ) )</errorConditionFormula>
    <errorMessage>Article Version Author is required.</errorMessage>
</ValidationRule>
