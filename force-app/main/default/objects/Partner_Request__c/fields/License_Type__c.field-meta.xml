<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>License_Type__c</fullName>
    <description>Used to determine which license type should be initially assigned to CP. GCP will analyze usage on a quarterly basis and adjust license types as needed.</description>
    <externalId>false</externalId>
    <inlineHelpText>Identifies how often the user needs access to the Partner Portal:

1) None – No access to the ICPP (Portal).
2) Portal Use – Occasional Login (Light user) – User will use Partner Portal 3 times a week or LESS (occasional portal use)
3) Portal Use – Daily Login” (Power User) - User will use Partner Portal 4 times a week or MORE (daily portal use)</inlineHelpText>
    <label>Portal Use / License Type</label>
    <required>false</required>
    <trackFeedHistory>false</trackFeedHistory>
    <trackHistory>true</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Picklist</type>
    <valueSet>
        <controllingField>Access_Configuration__c</controllingField>
        <restricted>true</restricted>
        <valueSetDefinition>
            <sorted>false</sorted>
            <value>
                <fullName>Login License (Light User)</fullName>
                <default>false</default>
                <label>Portal Use – Occasional Login (Light user)</label>
            </value>
            <value>
                <fullName>Full License (Power User)</fullName>
                <default>false</default>
                <label>Portal Use – Daily Login (Power User)</label>
            </value>
        </valueSetDefinition>
        <valueSettings>
            <controllingFieldValue>Sales and Service Super User</controllingFieldValue>
            <controllingFieldValue>Sales Only - Individual</controllingFieldValue>
            <controllingFieldValue>Sales and Service - Individual</controllingFieldValue>
            <controllingFieldValue>Service Only - Individual</controllingFieldValue>
            <controllingFieldValue>Sales Only - Manager</controllingFieldValue>
            <controllingFieldValue>Sales and Service - Manager</controllingFieldValue>
            <controllingFieldValue>Service Only - Manager</controllingFieldValue>
            <controllingFieldValue>All</controllingFieldValue>
            <controllingFieldValue>Sales Executive</controllingFieldValue>
            <valueName>Full License (Power User)</valueName>
        </valueSettings>
        <valueSettings>
            <controllingFieldValue>Sales Only - Individual</controllingFieldValue>
            <controllingFieldValue>Service Only - Individual</controllingFieldValue>
            <controllingFieldValue>Sales Only - Manager</controllingFieldValue>
            <controllingFieldValue>Service Only - Manager</controllingFieldValue>
            <controllingFieldValue>All</controllingFieldValue>
            <controllingFieldValue>Sales Executive</controllingFieldValue>
            <valueName>Login License (Light User)</valueName>
        </valueSettings>
    </valueSet>
</CustomField>
