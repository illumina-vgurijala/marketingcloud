<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Charket__Title_Length_Limit</fullName>
    <active>true</active>
    <errorConditionFormula>LEN( Name )  &gt; 27</errorConditionFormula>
