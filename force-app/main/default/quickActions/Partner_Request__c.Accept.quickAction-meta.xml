<?xml version="1.0" encoding="UTF-8"?>
<QuickAction xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>For accepting the New Account Request</description>
    <fieldOverrides>
        <field>AccountId</field>
        <formula>Partner_Request__c.Owner:User.Contact.AccountId</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Country_Text__c</field>
        <formula>Partner_Request__c.Owner:User.Contact.Account.BillingCountry</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Email</field>
        <formula>Partner_Request__c.Email__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>FirstName</field>
        <formula>Partner_Request__c.First_Name__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>LastName</field>
        <formula>Partner_Request__c.Last_Name__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>MailingCity</field>
        <formula>Partner_Request__c.Owner:User.Contact.Account.BillingCity</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>MailingCountry</field>
        <formula>Partner_Request__c.Owner:User.Contact.Account.BillingCountry</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>MailingPostalCode</field>
        <formula>Partner_Request__c.Owner:User.Contact.Account.BillingPostalCode</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>MailingState</field>
        <formula>Partner_Request__c.Owner:User.Contact.Account.BillingState</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>MailingStreet</field>
        <formula>Partner_Request__c.Owner:User.Contact.Account.BillingStreet</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Partner_Portal_Status__c</field>
        <literalValue>Pending</literalValue>
    </fieldOverrides>
    <fieldOverrides>
        <field>Phone</field>
        <formula>Partner_Request__c.Phone__c</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Salutation</field>
        <formula>CASE(Partner_Request__c.Salutation__c, 
&quot;Mr.&quot;, &quot;Mr.&quot;, 
&quot;Mrs.&quot;, &quot;Mrs.&quot;, 
&quot;Ms.&quot;, &quot;Ms.&quot;, 
&quot;Dr.&quot;, &quot;Dr.&quot;, 
&quot;Prof.&quot;, &quot;Prof.&quot;, 
&quot;&quot;)</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>State_Province_Text__c</field>
        <formula>Partner_Request__c.Owner:User.Contact.Account.BillingState</formula>
    </fieldOverrides>
    <fieldOverrides>
        <field>Title</field>
        <formula>Partner_Request__c.Title__c</formula>
    </fieldOverrides>
	<fieldOverrides>
        <field>Channel_Partner_Job_Category__c</field>
        <formula>TEXT(Partner_Request__c.Job_Category__c)</formula>
    </fieldOverrides>
    <label>Accept</label>
    <optionsCreateFeedItem>false</optionsCreateFeedItem>
    <quickActionLayout>
        <layoutSectionStyle>TwoColumnsLeftToRight</layoutSectionStyle>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Name</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Title</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Phone</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
        <quickActionLayoutColumns>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>AccountId</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Email</field>
                <uiBehavior>Required</uiBehavior>
            </quickActionLayoutItems>
			<quickActionLayoutItems>
                <emptySpace>false</emptySpace>
                <field>Channel_Partner_Job_Category__c</field>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>true</emptySpace>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
            <quickActionLayoutItems>
                <emptySpace>true</emptySpace>
                <uiBehavior>Edit</uiBehavior>
            </quickActionLayoutItems>
        </quickActionLayoutColumns>
    </quickActionLayout>
    <successMessage>Contact Created Successfully</successMessage>
    <targetObject>Contact</targetObject>
    <targetParentField>Partner_Request__c</targetParentField>
    <type>Create</type>
</QuickAction>
