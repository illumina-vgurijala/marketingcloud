<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>CreatedBy</field>
        <field>Account__c</field>
        <field>Contact_Name__c</field>
        <field>Customer_Address__c</field>
        <field>NCMO_Order_Total__c</field>
        <field>NCMO_Justification__c</field>
        <field>NCMO_Reason__c</field>
        <field>Open_Offer_Implicated__c</field>
        <field>Open_Offer_Product__c</field>
        <field>Open_Offer_Short_Term_Proj_Justification__c</field>
        <field>Open_Offer_Justification_Provided__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>Regular NCMO approval from Tier 1 Approver</description>
        <label>NCMO Approval</label>
        <name>NCMO_Approval</name>
        <rejectionActions>
            <action>
                <name>NCMO_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>NCMO_Approval_Notification</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>amihalsky@illumina.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>ggoelzer@illumina.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>NCMOs submitted with Open Offer implications should be routed to Legal for approval.</description>
        <label>Legal Approval</label>
        <name>Legal_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>NCMO_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>If an NCMO is submitted with Open Offer considerations and the submitter has a designated approver.</description>
    <emailTemplate>No_Charge_Marketing_Order/NCMO_Request_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>No_Charge_Marketing_Order__c.Open_Offer_Implicated__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>No_Charge_Marketing_Order__c.Open_Offer_Product__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.NCMO_Approver_Tier_1__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NCMO_Notification_To_Customer_Service_For_Order_Processing</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_NCMO_Status_To_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Set_NCMO_Status_To_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_NCMO_Status_Submitted_For_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Open Offer with Approver</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>NCMO_Approver_Tier_1__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Set_NCMO_Status_To_Open</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
