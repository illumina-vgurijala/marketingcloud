<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>CreatedBy</field>
        <field>Account__c</field>
        <field>Contact_Name__c</field>
        <field>Customer_Address__c</field>
        <field>NCMO_Order_Total__c</field>
        <field>NCMO_Justification__c</field>
        <field>NCMO_Reason__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>NCMO_Approval_Notification</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>If APJ  China NCMO submitter has an approver listed in their user detail page and if the NCMO total is less than $50,000, then the approval is routed to the NCMO Tier 1 Approver listed in the user&apos;s detail page</description>
        <label>Routing Approval to APJ China Tier 1 Approver</label>
        <name>Routing_Approval_to_APJ_China_Tier_1_Approver</name>
        <rejectionActions>
            <action>
                <name>NCMO_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>When users in China and AMEA have an approver listed in their user profile and if the NCMO is less than USD 50,000, then the approval is routed the approver listed in NCMO Approver Tier 1</description>
    <emailTemplate>No_Charge_Marketing_Order/NCMO_Request_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>User.NCMO_Approver_Tier_1__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>No_Charge_Marketing_Order__c.NCMO_Order_Total__c</field>
            <operation>lessThan</operation>
            <value>&quot;USD 50,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>User.Region__c</field>
            <operation>equals</operation>
            <value>AMEA,China</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NCMO_Notification_To_Customer_Service_For_Order_Processing</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_NCMO_Status_To_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Set_NCMO_Status_To_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_NCMO_Status_Submitted_For_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>China AMEA NCMO Less Than 50k</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>NCMO_Approver_Tier_1__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>8</processOrder>
    <recallActions>
        <action>
            <name>Set_NCMO_Status_To_Open</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
