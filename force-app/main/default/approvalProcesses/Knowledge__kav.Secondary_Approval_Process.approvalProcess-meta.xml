<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Service</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Title</field>
        <field>ArticleCaseAttachCount</field>
        <field>ArticleType</field>
        <field>PublishStatus</field>
        <field>IVDDx_Article__c</field>
        <field>Article_Body__c</field>
        <field>CreatedBy</field>
        <field>CreatedDate</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Set_Review_Status_to_Sec_Review_Complete</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <label>Secondary Approval</label>
        <name>Secondary_Approval</name>
        <rejectionActions>
            <action>
                <name>Set_Review_Status_to_Rejected_Sec</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Validation_Status_Rejected_Sec</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>KB_Clinical</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Knowledge__kav.IVDDx_Article__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <label>Compliance Approval</label>
        <name>Compliance_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Set_Review_Status_to_Rejected_Comp</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Set_Validation_Status_Rejected_Comp</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Approval process based on Secondary Workflow Field  on Knowledge Article</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Knowledge__kav.PublishStatus</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.Review_Status__c</field>
            <operation>equals</operation>
            <value>Pending Review - Primary Review Complete</value>
        </criteriaItems>
        <criteriaItems>
            <field>Knowledge__kav.Enable_for_CP__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Publish_Knowledge_Article</name>
            <type>KnowledgePublish</type>
        </action>
        <action>
            <name>Send_Notification_to_Creator_When_Knowledge_Published</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Review_Status_to_Review_Completed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Validation_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Send_Notification_to_Creator_When_Knowledge_Article_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Secondary Approval Process</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
