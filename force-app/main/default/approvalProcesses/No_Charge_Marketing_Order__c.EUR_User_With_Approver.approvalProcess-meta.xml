<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>CreatedBy</field>
        <field>Account__c</field>
        <field>Contact_Phone_Number__c</field>
        <field>Customer_Address__c</field>
        <field>NCMO_Order_Total__c</field>
        <field>NCMO_Justification__c</field>
        <field>NCMO_Reason__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>NCMO_Approval_Notification</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>If the EMEA NCMO submitter has an approver listed in their user detail page, then the approval is routed to the designated Tier 1 approver</description>
        <label>Routing to EMEA Approver</label>
        <name>Routing_to_EMEA_Approver</name>
        <rejectionActions>
            <action>
                <name>NCMO_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>If the NCMO submitter has a NCMO approver listed in their user profile, then the approval is routed to that approver</description>
    <emailTemplate>No_Charge_Marketing_Order/NCMO_Request_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>User.NCMO_Approver_Tier_1__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>User.Region__c</field>
            <operation>equals</operation>
            <value>EUR</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NCMO_Notification_To_Customer_Service_For_Order_Processing</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_NCMO_Status_To_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Set_NCMO_Status_To_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_NCMO_Status_Submitted_For_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>EUR User With Approver</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>NCMO_Approver_Tier_1__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>9</processOrder>
    <recallActions>
        <action>
            <name>Set_NCMO_Status_To_Open</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
