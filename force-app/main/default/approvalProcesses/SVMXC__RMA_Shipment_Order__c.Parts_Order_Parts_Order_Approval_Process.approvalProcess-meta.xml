        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AMR_Customer_Support</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AMR_Field_Service</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AMEA_Customer_Support</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AMEA_Field_Service</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>China_Customer_Support</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>China_Field_Service</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>EUR_Customer_Support</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>EUR_Field_Service</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>SVMXC__Service_Order__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>X1st_Level_Approval_Notification</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Requesters_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
        <rejectionActions>
            <action>
                <name>Part_Order_Set_Status_To_Open</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>X1st_Level_Rejection_Notification</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Final_Level_Approval_Notification</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Requester_Managers_Manager__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
         <entryCriteria>
            <formula>OR(
            Region__c=&apos;China&apos;,
            No_Of_Loaner_Instruments__c &lt;&gt;  No_Of_Instruments_POL__c
            )</formula>
        </entryCriteria>
        <label>Manager&apos;s Manager Approval</label>
        <name>Manager_s_Manager_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Final_Level_Rejection_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Part_Order_Set_Status_To_Open</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>Parts Order Approval Process</description>
    <emailTemplate>Parts_Order_Email_Templates/Instrument_Replacement_Part_Order_Approval_Template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SVMXC__RMA_Shipment_Order__c.Service_Product_Type__c</field>
            <operation>equals</operation>
            <value>Instrument</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Check_Request_All_Part_Order_Lines</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Part_Order_Set_Status_To_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Uncheck_Submit_POL_For_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Uncheck_Submit_POL_For_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Part_Order_Set_Status_To_PendingApproval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Parts Order Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
