<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Service</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Work_Order_Activity_Rules_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval</label>
        <name>Approval</name>
    </approvalStep>
    <description>DCP-43186 this process will trigger when rule is mark as inactive</description>
    <emailTemplate>Illumina_Services_Project_Templates/Illumina_Service_Project_Work_Order_Activity_Rules_Approval_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Active_FALSE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approved_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Active_TRUE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Reject_Email_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Active_TRUE</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>NewFieldValue_Active_False</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>OldFieldValue_Active_True</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Owner_Work_Order_Activity_Rules_Approv</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>WO Activity Rules Deactivation Process</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
